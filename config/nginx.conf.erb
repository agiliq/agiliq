daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
    use epoll;
    accept_mutex on;
    worker_connections 1024;
}

http {
    gzip on;
    gzip_comp_level 2;
    gzip_min_length 512;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml;
    gzip_disable "MSIE [1-6]\.";

    server_tokens off;

    log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
    access_log logs/nginx/access.log l2met;
    error_log logs/nginx/error.log;

    include mime.types;
    default_type application/octet-stream;
    sendfile on;

    #Must read the body in 15 seconds.
    client_body_timeout 15;

    # server will close connection after this time
    keepalive_timeout 30;

    upstream app_server {
        server unix:/tmp/nginx.socket fail_timeout=0;
    }

    server {
        listen <%= ENV["PORT"] %>;
        server_name www.agiliq.com "";
        rewrite ^(.*)$ https://agiliq.com$1 permanent;

    }

    server {
        listen <%= ENV["PORT"] %>;
        server_name agiliq.com;
        keepalive_timeout 5;

        if ($http_x_forwarded_proto != "https") {
          rewrite ^(.*)$ https://agiliq.com$1 permanent;
        }

        location /newsletter/ {
          root /app/static_html;
          index  index.html;
        }

        location /articles/ {
          root /app/static_html;
          index  index.html;
        }

        location /docs/ {
          root /app/static_html;
          index  index.html;
        }

        location /softwareconsulting/ {
          root /app/static_html;
          index  index.html;
        }

        location /books/ {
          root /app/static_html;
          index  index.html;
        }

        location /dumps/ {
          root /app/static_html;
          index  index.html;
        }


        location /static/ {
          alias /app/agiliqcom/static/;
        }

        location /timezones/ {
          root /app/static_html;
          index  index.html;
        }

        location /robots.txt {
            root /app/static_html;
            access_log      off;
            log_not_found   off;
        }

        location /favicon.ico {
            root /app/static_html;
            access_log      off;
            log_not_found   off;

        }

        location ~* ^.+\.(jpg|jpeg|gif|png|ico|css|zip|tgz|gz|rar|bz2|pdf)$ {
            expires 30d;
          }


        location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header    X-Forwarded-Protocol    $scheme;
            proxy_set_header Host $http_host;
            proxy_set_header    X-Real-IP               $remote_addr;
            proxy_redirect off;
            proxy_pass http://app_server;
        }
    }
}
